{
  "name": "histoire",
  "type": "module",
  "version": "1.0.0-alpha.2",
  "description": "A fast story book powered by Vite",
  "author": {
    "name": "Guillaume Chau"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Akryum/histoire.git",
    "type": "git",
    "directory": "packages/histoire"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/node/index.d.ts",
      "default": "./dist/node/index.js"
    },
    "./client": {
      "types": "./client.d.ts",
      "default": "./client.js"
    },
    "./plugin": {
      "types": "./plugin.d.ts",
      "default": "./plugin.js"
    },
    "./*": "./*"
  },
  "main": "./dist/node/index.js",
  "module": "./dist/node/index.js",
  "types": "./index.d.ts",
  "bin": {
    "histoire": "./bin.mjs"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "watch": "tsc -w --sourceMap",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "peerDependencies": {
    "vite": "catalog:"
  },
  "dependencies": {
    "@akryum/tinypool": "^0.3.1",
    "@histoire/app": "workspace:^",
    "@histoire/controls": "workspace:^",
    "@histoire/shared": "workspace:^",
    "@histoire/vendors": "workspace:^",
    "@types/markdown-it": "^14.1.2",
    "birpc": "^0.2.19",
    "change-case": "^5.4.4",
    "chokidar": "^4.0.1",
    "connect": "^3.7.0",
    "defu": "^6.1.4",
    "diacritics": "^1.3.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "gray-matter": "^4.0.3",
    "jiti": "^2.4.1",
    "jsdom": "^25.0.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.0",
    "markdown-it-emoji": "^3.0.0",
    "micromatch": "^4.0.8",
    "mrmime": "^2.0.0",
    "pathe": "^1.1.2",
    "picocolors": "^1.1.1",
    "sade": "^1.8.1",
    "shiki": "^3.0.0",
    "sirv": "^3.0.0",
    "vite-node": "3.2.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.1",
    "esbuild": "^0.24.0",
    "rollup": "^4.28.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "0.34.6"
  }
}
