{
  "name": "histoire-monorepo",
  "version": "0.0.3",
  "private": true,
  "repository": {
    "url": "https://github.com/Akryum/histoire.git",
    "type": "git"
  },
  "scripts": {
    "lint": "eslint . --ext js,vue,ts",
    "build": "pnpm run -r build --filter !histoire && pnpm run -r build --filter histoire",
    "watch": "pnpm run build && pnpm run -r watch --parallel --filter ./packages",
    "test": "pnpm run -r test --parallel --filter ./packages",
    "test:open": "pnpm run -r test:open --parallel --filter ./packages",
    "release": "pnpm run lint && pnpm run test && pnpm run build && sheep release -b main",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "engines": {
    "node": ">14.5.0"
  },
  "devDependencies": {
    "@akryum/sheep": "^0.3.2",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "autoprefixer": "^10.4.2",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.3.0",
    "postcss": "^8.2.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.1.3",
    "vitepress": "^0.21.6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react",
        "webpack"
      ]
    }
  }
}
